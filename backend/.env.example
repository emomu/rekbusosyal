# Sunucu Portu (Railway otomatik atar, localde 5001)
PORT=5001

# MongoDB Connection String
# Atlas'tan alacağın connection string'i buraya yapıştır
# MONGO_URI ve MONGODB_URI (alias) - İkisi de çalışır
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database
# Railway DATABASE_URL kullanıyorsa otomatik set edilir
# DATABASE_URL=mongodb+srv://...

# JWT Secret Key (Güvenli random string kullan)
# CRITICAL: ASLA default değeri kullanma! Production'da mutlaka değiştir!
# Güvenli anahtar üretmek için: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_THIS_WITH_SECURE_RANDOM_STRING_MINIMUM_64_CHARS

# Resend API Key (Email gönderimi için)
# https://resend.com/api-keys adresinden al
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Cloudinary Configuration (Resim yükleme için)
# https://cloudinary.com/console adresinden al
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Backend ve Frontend URL'leri
# Development
BACKEND_URL=http://localhost:5001
FRONTEND_URL=http://localhost:5173

# Production (Railway'de otomatik set edilir)
# BACKEND_URL=https://your-app.railway.app
# FRONTEND_URL=https://your-app.railway.app

# Maintenance Mode (Bakım Modu)
# true: API bakım modunda (503 döner)
# false veya boş: Normal çalışır
MAINTENANCE_MODE=false

# Spotify Integration
# https://developer.spotify.com/dashboard adresinden uygulama oluştur
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Development için: http://localhost:5001/api/spotify/callback
# Production için: https://your-backend-url.com/api/spotify/callback
SPOTIFY_REDIRECT_URI=http://localhost:5001/api/spotify/callback

# Client URL (Spotify callback'ten sonra yönlendirilecek)
CLIENT_URL=http://localhost:5173
